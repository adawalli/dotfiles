{{ if eq .chezmoi.os "darwin" -}}
{{ template "sh_header" . }}

# Dependency fingerprint to trigger rerun when package list changes
# packages_sha256: {{ include ".chezmoidata/packages.yaml" | sha256sum }}

# Install Homebrew if not present
if ! command -v brew >/dev/null 2>&1; then
  echo "Installing Homebrew..."
  /bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)"
  if [[ -x /opt/homebrew/bin/brew ]]; then
    eval "$(/opt/homebrew/bin/brew shellenv)"
  fi
else
  eval "$(brew shellenv)"
fi

# Generate and run Brewfile from packages.yaml
brew bundle --file=/dev/stdin <<EOF
{{ range .packages.darwin.brews -}}
brew {{ . | quote }}
{{ end -}}
{{ range .packages.darwin.casks -}}
cask {{ . | quote }}
{{ end -}}
EOF

echo "âœ“ macOS packages installed successfully"
{{ end -}}
